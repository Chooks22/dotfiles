# main
background #2e2946
foreground #dddde5

# selection
selection_background #3f375b
selection_foreground #d5ced9

# border
active_border_color #7e6c88
inactive_border_color #a5f69c

# tab
tab_bar_style powerline
tab_bar_background #24223a

active_tab_background #2e2946
active_tab_foreground #d5ced9

inactive_tab_background #24223a
inactive_tab_foreground #d5ced9

# misc
enable_audio_bell no
window_padding_width 6
url_color #bb92fa
cursor #d5ced9

# ansi colors
# black
color0 #2f2833
color8 #7e6c88
# red
color1 #fc644d
color9 #fc644d
# green
color2 #a5f69c
color10 #a5f69c
# yellow
color3 #e9d395
color11 #e9d395
# blue
color4 #8553f0
color12 #bb92fa
# magenta
color5 #f92672
color13 #ff40c7
# cyan
color6 #74d3de
color14 #74d3de
# white
color7 #d5ced9
color15 #ffffff

# switch tabs
map alt+1 goto_tab 1
map alt+2 goto_tab 2
map alt+3 goto_tab 3
map alt+4 goto_tab 4
map alt+5 goto_tab 5
map alt+6 goto_tab 6
map alt+7 goto_tab 7
map alt+8 goto_tab 8
map alt+9 goto_tab 9

# for nnn
enabled_layouts all
allow_remote_control yes
listen_on unix:/tmp/kitty

# disables update check
update_check_interval 0
