" detect file types
filetype on
filetype plugin on
filetype indent on

" editor
syntax on
set termguicolors
colo ancient-one-dark-violet

set number
set relativenumber

set nowrap
set cursorline

" indent = 2 spaces
set expandtab
set shiftwidth=2
set tabstop=2
set softtabstop=2

" search options
set ignorecase
set smartcase

set showmatch
set hlsearch
