(defwindow bar
  :monitor 0
  :geometry (geometry
    :y 0
    :height "32px"
    :width "100%"
    :anchor "top center"
  )
  :stacking "fg"
  :exclusive true
  :windowtype "dock"
(contents))

(defpoll time :interval "1s" "date '+%a %b %d, %T'")

(defwidget contents []
  (box
    (box "")
    (box :space-evenly false :spacing 3 :halign "end"
      (label :text time)
    )
  )
)

